		{
			"name": "localhost:9090/oauth2/token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const json = pm.response.json();",
							"",
							"if (json.access_token) {",
							"    // Set both local and collection variable",
							"    pm.variables.set(\"access_token\", json.access_token);              // for this run",
							"    pm.collectionVariables.set(\"access_token\", json.access_token);",
							"    console.log(\"‚úÖ Access token saved:\", json.access_token);",
							"    pm.execution.setNextRequest(\"Access Protected Resource\");  // üöÄ Set next request by name",
							"} else {",
							"    console.error(\"‚ùå No access token returned!\");",
							"    pm.execution.setNextRequest(null); // Stop the run",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "demo-secret",
							"type": "string"
						},
						{
